@model IEnumerable<MVCBiblioteca.Models.Emprestimo>

@{
    ViewData["Title"] = "Index";
}
<div class="mb-2">
    <h1>Empréstimos</h1>
    <a asp-action="Create" class="btn btn-primary">Novo empréstimo</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Livro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDevolucao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Livro.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEmprestimo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDevolucao)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Ver detalhes"> <i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Editar usuário"><i class="bi bi-pencil fs-6"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir usuário"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
